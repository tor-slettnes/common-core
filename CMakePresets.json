{
    "version" : 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Default build using UNIX Makefiles",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/out/build/default",
            "installDir": "out/install",
            "cacheVariables": {
            }
        },
        {
            "name": "arm",
            "description": "Cross-compile for ARM CPU architectures",
            "toolchainFile": "${fileDir}/build/cmake/toolchain-aarch64.cmake",
            "binaryDir": "${sourceDir}/out/build/arm",
            "installDir": "${sourceDir}/out/install-arm",
            "inherits": "default"
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "description": "Build with Default Configuration",
            "configurePreset": "default",
            "jobs" : 16
        },
        {
            "name": "jenkins",
            "description": "Jenkins build with Default Configuration",
            "inherits": ["default"],
            "jobs" : 1
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        }
    ],
    "packagePresets": [
        {
            "name": "deb",
            "configurePreset": "default",
            "packageDirectory": "${sourceDir}/out/debs",
            "generators": [
                "DEB"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "local",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "default"},
                {"type": "test",      "name": "default"}
            ]
        },
        {
            "name": "deb",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "default"},
                {"type": "test",      "name": "default"},
                {"type": "package",   "name": "deb"}
            ]
        },
        {
            "name": "jenkins",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "jenkins"},
                {"type": "test",      "name": "default"},
                {"type": "package",   "name": "deb"}
            ]
        }
    ]
}
