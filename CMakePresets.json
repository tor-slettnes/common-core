{
    "version" : 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Default configuration using UNIX Makefiles",
            "generator": "Unix Makefiles",
            "binaryDir": "$env{BUILD_DIR}",
            "installDir": "$env{INSTALL_DIR}",
            "environment": {
                "OUT_DIR": "${sourceDir}/out",
                "BUILD_DIR": "$env{OUT_DIR}/build/${presetName}",
                "INSTALL_DIR": "$env{OUT_DIR}/${presetName}",
                "PACKAGE_DIR": "$env{OUT_DIR}/packages"
            },
            "cacheVariables":
            {
                "BUILD_NUMBER": "$env{BUILD_NUMBER}",
                "RELEASE_TAG": "$env{RELEASE_TAG}",
                "DEBIAN_RELEASE": "$env{DEBIAN_RELEASE}"
            }
        },
        {
            "name": "arm",
            "description": "Cross-compilation for ARM",
            "inherits": "default",
            "toolchainFile": "build/cmake/toolchain-Linux-aarch64.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "description": "Build with Default Configuration preset",
            "configurePreset": "default",
            "jobs" : 16
        },
        {
            "name": "install",
            "inherits": "default",
            "description": "Install artifacts locally",
            "targets": ["install"]
        },
        {
            "name": "wheels",
            "inherits": "default",
            "description": "Build Python Wheels",
            "targets": ["python_wheels"]
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        }
    ],
    "packagePresets": [
        {
            "name": "debs",
            "description": "Build Debian packages",
            "configurePreset": "default",
            "packageDirectory": "$env{PACKAGE_DIR}",
            "generators": [
                "DEB"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "install"}
            ]
        },
        {
            "name": "test",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "default"},
                {"type": "test",      "name": "default"}
            ]
        },
        {
            "name": "debs",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "default"},
                {"type": "package",   "name": "debs"}
            ]
        },
        {
            "name": "wheels",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "wheels"}
            ]
        },
        {
            "name": "release",
            "steps": [
                {"type": "configure", "name": "default"},
                {"type": "build",     "name": "default"},
                {"type": "test",      "name": "default"},
                {"type": "build",     "name": "wheels"},
                {"type": "package",   "name": "debs"}
            ]
        }
    ]
}
