#!/bin/sh -e

case "$1" in
    configure)
        if type systemctl >/dev/null 2>&1
        then
            echo "Adding system service: @SERVICE_UNIT@"
            systemctl enable @SERVICE_UNIT_PATH@
            systemctl start @SERVICE_UNIT@
        else
            echo "SystemD is not available; skipping service integration"
        fi
        ;;
esac
