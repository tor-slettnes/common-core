#!/bin/sh -e

case "$1" in
    upgrade)
    ;;

    remove)
        if pidof -q systemd
        then
            echo "Removing system service: @SERVICE_UNIT@"
            systemctl disable @SERVICE_UNIT@ || true
            systemctl stop @SERVICE_UNIT@ || true
        else
            echo "SystemD is not available; skipping service integration"
        fi
        ;;
esac
